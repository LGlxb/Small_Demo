<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_my"
    tools:context=".ui.activity.HomeActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<com.facebook.drawee.view.SimpleDraweeView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:adjustViewBounds="true"-->
        <!--android:minHeight="@dimen/dp_150"-->
        <!--android:src="@drawable/my_icon_information_n" />-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/dp_150"
                    android:background="@drawable/shape_bg_my"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_50">

                    <TextView
                        android:id="@+id/my_nick_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_60"
                        android:gravity="center"
                        android:text="名字"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_14" />

                    <RelativeLayout
                        android:id="@+id/my_info"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_50"
                        android:layout_marginRight="@dimen/dp_24">

                        <ImageView
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/my_icon_information_n" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_44"
                            android:text="个人资料"
                            android:textColor="#666666"
                            android:textSize="@dimen/sp_14" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="@dimen/dp_44"
                            android:background="#ededed" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/my_circle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginRight="@dimen/dp_24">

                        <ImageView
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/my_icon_circle_n" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_44"
                            android:text="我的圈子"
                            android:textColor="#666666"
                            android:textSize="@dimen/sp_14" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="@dimen/dp_44"
                            android:background="#ededed" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/my_foot"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginRight="@dimen/dp_24">

                        <ImageView
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/my_icon_foot_n" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_44"
                            android:text="我的足迹"
                            android:textColor="#666666"
                            android:textSize="@dimen/sp_14" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="@dimen/dp_44"
                            android:background="#ededed" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/my_wallet"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginRight="@dimen/dp_24">

                        <ImageView
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/my_icon_wallet_n" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_44"
                            android:text="我的钱包"
                            android:textColor="#666666"
                            android:textSize="@dimen/sp_14" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="@dimen/dp_44"
                            android:background="#ededed" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/my_address"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginRight="@dimen/dp_24">

                        <ImageView
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/my_icon_address_n" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_44"
                            android:text="我的收货地址"
                            android:textColor="#666666"
                            android:textSize="@dimen/sp_14" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="@dimen/dp_44"
                            android:background="#ededed" />

                    </RelativeLayout>

                    <Button
                        android:id="@+id/my_login_out"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_20"
                        android:background="@drawable/shape_bg_order_pay"
                        android:text="退出登录"
                        android:textColor="#fff"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/my_avatar"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_alignTop="@+id/line1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-40dp"
                    android:src="@drawable/appicon1"
                    fresco:roundAsCircle="true" />

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

</FrameLayout>