<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_reg"
    tools:context=".ui.activity.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_160"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_phone"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_28"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:src="@drawable/login_icon_phone_n" />

            <EditText
                android:id="@+id/reg_edit_phone"
                android:layout_width="@dimen/dp_280"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_phone"
                android:background="@null"
                android:hint="手机号"
                android:inputType="number"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="@dimen/dp_18" />

        </RelativeLayout>

        <View
            android:layout_width="@dimen/dp_330"
            android:layout_height="@dimen/dp_2"
            android:layout_gravity="center"
            android:background="#fff"></View>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_verfition_code"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:src="@drawable/login_icon_verification_code_n" />

            <EditText
                android:id="@+id/reg_edit_verfition_code"
                android:layout_width="@dimen/dp_230"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_verfition_code"
                android:background="@null"
                android:hint="验证码"
                android:inputType="number"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="@dimen/dp_18" />

            <TextView
                android:id="@+id/reg_txt_get_verfition_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/reg_edit_verfition_code"
                android:text="获取验证码"
                android:textColor="#fff"
                android:textSize="@dimen/dp_10" />

        </RelativeLayout>

        <View
            android:layout_width="@dimen/dp_330"
            android:layout_height="@dimen/dp_2"
            android:layout_gravity="center"
            android:background="#fff"></View>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_lock"
                android:layout_width="@dimen/dp_19"
                android:layout_height="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_20"
                android:src="@drawable/login_icon_lock_n" />

            <EditText
                android:id="@+id/reg_edit_pwd"
                android:layout_width="@dimen/dp_260"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/img_lock"
                android:background="@null"
                android:hint="注册密码"
                android:inputType="textPassword"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="@dimen/dp_18" />

            <ImageView
                android:id="@+id/reg_img_eye"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@id/reg_edit_pwd"
                android:src="@drawable/login_icon_eye_n" />

        </RelativeLayout>

        <View
            android:layout_width="@dimen/dp_330"
            android:layout_height="@dimen/dp_2"
            android:layout_gravity="center"
            android:layout_marginTop="-10dp"
            android:background="#fff"></View>

        <LinearLayout
            android:layout_width="@dimen/dp_330"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_15">

            <TextView
                android:id="@+id/reg_txt_go_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="已有账户？立即登录"
                android:textColor="#fff"
                android:textSize="@dimen/dp_15" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_120"
        android:gravity="center">

        <Button
            android:id="@+id/btn_reg"
            android:layout_width="@dimen/dp_330"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/shape_bg_login_reg"
            android:text="注册"
            android:textColor="#ff5f71"
            android:textSize="@dimen/dp_18" />

    </LinearLayout>


</RelativeLayout>